# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Login password (plain text - for quick setup)
LOGIN_PASSWORD=your_secure_password
# Or use a bcrypt hash (recommended for production):
# LOGIN_PASSWORD_HASH=$2b$10$... (generate with: node -e "require('bcrypt').hash('pw',10).then(console.log)")

# Comma-separated Telegram chat IDs allowed to use the bot
ALLOWED_CHAT_IDS=123456789,987654321

# Base directory containing your projects
PROJECTS_BASE_DIR=C:\Users\jeffb\Desktop\code

# Default Claude model
DEFAULT_MODEL=sonnet

# Auto-authenticate whitelisted chats (skip /login)
AUTO_AUTH=true

# Rate limit: max messages per minute
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=60000
