{
  "name": "claudebot",
  "version": "1.0.0",
  "description": "Telegram Bot to remotely control Claude Code CLI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/launcher.ts",
    "dev:single": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.0",
    "playwright": "^1.58.2",
    "telegraf": "^4.16.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  }
